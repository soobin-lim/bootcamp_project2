<div>
  <h1>Material Master</h1>
  <a class="waves-effect waves-light btn-large" id='uploadkia' onclick="uploadfile()">Upload Kia Material Master File
    (xlsx)</a>
  <!-- button link is in onlink -->

  <form action="/profile" method="post" enctype="multipart/form-data">
    <input id='fileinput1' type="file" name="avatar" />
  </form>
  <table>
    <thead>
      <tr>
        <th>File Name</th>
        <th>Sync</th>
      </tr>
    </thead>

    <tbody>
      {{#each filelist as |file|}}
      <tr>
        <td>{{file}}</td>
        <td><button class='kia_apply_btn' data-filename={{file}}>Sync</button></td>
      </tr>
      {{/each}}
    </tbody>

  </table>


  <a class="waves-effect waves-light btn-large">Upload SAP and Kia Material Master File (xlsx)</a>

  <table>
    <thead>
      <tr>
        <th>Material</th>
        <th>Sap Material</th>
        <th>Description</th>
        <th>PAC</th>
      </tr>
    </thead>

    <tbody>
      {{#each kiamaterials as |kiamaterial|}}
      <tr>
        <td>{{kiamaterial.material}}</td>
        <td>{{kiamaterial.sapmaterial}}</td>
        <td>{{kiamaterial.description}}</td>
        <td>{{kiamaterial.pac}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <a class="waves-effect waves-light btn-large">Upload SAP and Kia Material Master File (xlsx)</a>

  <table>
    <thead>
      <tr>
        <th>File Name</th>
        <th>Sync</th>
      </tr>
    </thead>

    <tbody>
      {{#each filelist as |file|}}
      <tr>
        <td>{{file}}</td>
        <td><button class='sap_apply_btn' data-filename={{file}}>Sync, Delete</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a class="waves-effect waves-light btn-large">Open Material Master</a>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">textsms</i>
          <input type="text" id="autocomplete-input" class="autocomplete">
          <label for="autocomplete-input">Autocomplete</label>
        </div>
      </div>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Status</th>
        <th>Material</th>
        <th>SAPMaterial</th>
      </tr>
    </thead>

    <tbody>
      {{#each sapmaterials as |sapmaterial|}}
      <tr>
        <td>{{sapmaterial.status}}</td>
        <td>{{sapmaterial.material}}</td>
        <td>{{sapmaterial.sapmaterial}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>
 <!--JavaScript at end of body for optimized loading-->
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="/js/js_in_handlebars/materialmaster.js"></script>
