<div>
	<h3>Inventory</h3>

	<ul class="collapsible">
		{{#each groups as |groupname|}}
		<li>
			{{!-- <div class="collapsible-header"><i class="material-icons">filter_drama</i>
				{{material}} {{description}} {{pgn}}</div>
			<div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div> --}}

			<div class="collapsible-header"><i class="material-icons">check_box_outline_blank
				</i>
				{{groupname}}</div>
			<div class="collapsible-body">
				{{#each (getkiamaterialofgroup ../groupsAndKiaMaterials groupname) as |kiamaterial|}}

				<span class="row">

					<div class="chip col s1 center-align">
						{{pac}}
					</div>
					<div class="col s5">
						{{material}}
						{{description}}
					</div>
					<!-- Switch -->
					<div class="switch col s2">
						<label>
							Off
							<input type="checkbox" checked="checked">
							<span class="lever"></span>
							On
						</label>
					</div>

				</span>
				{{/each}}

			</div>
		</li>
		{{/each}}
	</ul>
</div>

<script src="/js/js_in_handlebars/inventory/inventory.js"></script>