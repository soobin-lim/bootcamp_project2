<div class="container">
	<h3>Inventory {{today}}</h3>

	<ul class="collapsible">
		{{#each groups as |groupname|}}
		<li>
			{{!-- <div class="collapsible-header"><i class="material-icons">filter_drama</i>
				{{material}} {{description}} {{pgn}}</div>
			<div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div> --}}
			<div class="collapsible-header" style="display: flex; justify-content: space-between">
				<div>
					<i class="material-icons">edit</i>
				</div>
				{{groupname}}
				<div>

					<form action="#">
						<label>
							<input type="checkbox" />
							<span>7 AM&nbsp&nbsp&nbsp</span>
						</label>

						<label>
							<input type="checkbox" />
							<span>11 AM&nbsp&nbsp&nbsp</span>
						</label>

						<label>
							<input type="checkbox" />
							<span>3 PM&nbsp&nbsp&nbsp</span>
						</label>
					</form>
				</div>
			</div>

			<div class="collapsible-body">
				{{#each (getkiamaterialofgroup ../groupsAndKiaMaterials groupname) as |kiamaterial|}}

				<span class="row">

					<div class="chip col s1 center-align">
						{{pac}}
					</div>
					<div class="col s5">
						{{material}}
						{{description}}
					</div>

					<div class="col s2">
						<!-- Switch -->
						<div class="switch" style="height: auto; width: auto;">
							<label>
								{{!-- Off --}}
								<input type="checkbox" checked="checked">
								<span class="lever"></span>
								{{!-- On --}}
							</label>
						</div>
					</div>

					<div class="col s1">
						<input id="inventory1" type="number" class="validate detail truncate" style="height: auto">
						<label for="inventory1">7 AM</label>
					</div>
					<div class="col s1">
						<input id="inventory2" type="number" class="validate detail truncate" style="height: auto">
						<label for="inventory2">11 AM</label>
					</div>
					<div class="col s1">
						<input id="inventory3" type="number" class="validate detail truncate" style="height: auto">
						<label for="inventory3">3 PM</label>
					</div>

				</span>
				{{/each}}

			</div>
		</li>
		{{/each}}
	</ul>
</div>

<script src="/js/js_in_handlebars/inventory/inventory.js"></script>